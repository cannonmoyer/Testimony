<div id="flash_messages">
  <% flash.each do |type, message| %>
  	<% if type == "error" %>
  		<div class="alert alert-danger" role="alert"><%= type %>: <%= message %></div>
  	<% else %>
  		<div class="alert alert-success" role="alert"><%= type %>: <%= message %></div>
    <% end %>
    
  <% end %>
</div>
<% flash.clear %>